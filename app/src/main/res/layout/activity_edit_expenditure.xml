<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/edit_description"
        android:hint="@string/hint_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edit_type"
        android:hint="@string/hint_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_description"/>
    <EditText
        android:id="@+id/edit_amount"
        android:hint="@string/hint_amount"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_type"/>
    <Spinner
        android:id="@+id/edit_amount_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/edit_amount"
        android:layout_alignTop="@id/edit_amount"/>
    <!--<EditText
        android:id="@+id/date"
        android:hint="@string/hint_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/amount"/>
    <EditText
        android:id="@+id/split"
        android:hint="@string/hint_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date"/>
    <EditText
        android:id="@+id/notes"
        android:hint="@string/hint_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/split"/>
    <EditText
        android:id="@+id/names"
        android:hint="@string/hint_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notes"/>
    <EditText
        android:id="@+id/split_amounts"
        android:hint="@string/hint_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/names"/>-->
    <ListView
        android:id="@+id/edit_notes_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_amount">
    </ListView>
    <Button
        android:id="@+id/edit_expenditure_positive"
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_notes_list_view"/>
    <Button
        android:id="@+id/edit_expenditure_negative"
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_notes_list_view"
        android:layout_toRightOf="@id/edit_expenditure_positive"/>

</RelativeLayout>